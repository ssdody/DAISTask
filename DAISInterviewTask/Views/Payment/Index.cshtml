@model DAISInterviewTask.Models.PaymentViewModel

<h2>Payment</h2>

@if (ViewData["Error"] != null)
{
    <div class="well row">
        <label class="text-danger form-control">@ViewData["Error"]</label>
    </div>
}@if (ViewData["Message"] != null)
{
    <div class="well row">
        <label class="text-success form-control">@ViewData["Message"]</label>
    </div>
}

<form asp-controler="Payment" asp-action="Payment">
    <div class="row">

        <div class="well form-group col-md-5 col-md-offset-3 text-center">
            <label asp-for="BankAccounts" class="control-label"></label>
            <select asp-for="FromBankAccountId" asp-items="@Model.BankAccounts" class="form-control"></select>
            <span asp-validation-for="BankAccounts" class="text-danger"></span>

            <label asp-for="ToBankAccount"></label>
            <input asp-for="ToBankAccount" class="form-control" type="text" placeholder="to bank account" />
            <span asp-validation-for="ToBankAccount" class="text-danger"></span>

            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" type="text" placeholder="amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>

            <label asp-for="Reason"></label>
            <input asp-for="Reason" class="form-control" type="text" placeholder="reason" />
            <span asp-validation-for="Reason" class="text-danger"></span>

            <button type="submit">Pay</button>
        </div>

    </div>
</form>
